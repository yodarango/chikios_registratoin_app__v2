<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.danielrangel.net/utils.min.css"
    />
    <link rel="stylesheet" href="/css/tokens.css" />
    <link rel="stylesheet" href="/css/app.css" />

    <style>
      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }
    </style>
    <title>registrants</title>
  </head>
  <body>
    <main>
      <div id="count">
        <h1
          class="fs-2 fw-bold my-5 border-bottom d-flex align-items-center justify-content-between"
        >
          <span>Total registrations:</span>
          <span><%= registrants.length %></span>
        </h1>
      </div>
      <div class="w-100 d-flex align-items-center justify-content-start mb-5">
        <input
          type="text"
          placeholder="Search by last name"
          class="form_input p-3 bg-info-subtle rounded-3 w-100 me-3"
          id="search"
        />
        <button
          class="bg-quaternary flex-shrink-0 my-0 me-3 color-primary"
          onclick="handleSearch()"
        >
          Search
        </button>
        <button
          class="bg-tertiary color-primary flex-shrink-0 m-0"
          onclick="handleReset()"
        >
          Reset
        </button>
      </div>
      <div id="registrants-table">
        <% registrants.forEach(registrant => { %>
        <div class="card-<%= registrant.id %>">
          <div
            class="d-flex align-items-center justify-content-start p3 mx-0 mb-4 rounded-3 card"
          >
            <a href="/admin/registrant.html?registrant=<%= registrant.id %>">
              <img
                src="/photos/<%= registrant.profilePicture %>"
                alt="avatar"
                class="avatar d-block rounded-3 me-4 flex-nowrap"
              />
            </a>
            <h3 class="me-4 my-0 w-100">
              <%= registrant.firstName %> <%= registrant.lastName %>, <%=
              registrant.age %>
            </h3>
            <div
              class="flex-shrink-0 d-flex align-items-center justify-content-center"
            >
              <button
                class="runded-circle d-block delete bg-warning me-4"
                id="delete-<%= registrant.id %>"
                onclick="deleteRegistrant('<%= registrant.id %>')"
              ></button>
              <button
                onclick="check('<%= registrant.id %>', '<%= registrant.checkIn %>')"
                id="<%= registrant.id %>"
                class="<%= registrant.checkIn ? 'checked_in bg-success rounded-circle d-block flex-nowrap' : 'checked_out bg-danger rounded-circle nd-block flex-nowrap' %>"
              ></button>
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <h3 id="loading-34dsf" style="display: none">Loading ðŸ˜ƒ...</h3>
      <button
        data-results="0"
        class="w-100 bg-quaternary color-primary load-more my-5"
        onclick="handleLoadMore()"
      >
        More results
      </button>
    </main>
  </body>

  <script>
    async function getregistrants(
      count = "fromid=0",
      ln = "",
      isLoadMore = false
    ) {
      const loadMore = document.querySelector(".load-more");
      const registrantsTable = document.getElementById("registrants-table");
      const countEl = document.querySelector("#count h1");
      const loading__34dsf = document.querySelector("#loading-34dsf");
      loading__34dsf.style.display = "block";

      if (!isLoadMore) registrantsTable.innerHTML = "";

      try {
        const req = await fetch("/admin/registrants?" + count + `&${ln}`, {
          METHOD: "GET",
        });
        const res = await req.json();

        if (res.length === 20) {
          loadMore.classList.remove("d-none");
          loadMore.classList.add("d-block");
          const currentCount = loadMore.dataset.results;
          loadMore.dataset.results = `${Number(currentCount) + 20}`;
        } else {
          loadMore.classList.remove("d-block");
          loadMore.classList.add("d-none");
        }

        const kids = res?.kids || [];
        countEl.innerHTML = `<span>Total registrations:</span> <span>${res.count}</span>`;

        for (let registrant of kids) {
          const wrapper = document.createElement("div");
          wrapper.classList.add(`card-${registrant.id}`);

          const card = `
          <div class="d-flex align-items-center justify-content-start p3 mx-0 mb-4 rounded-3 card">
             <a href="/admin/registrant.html?registrant=${
               registrant.id
             }"><img src="/photos/${
            registrant.profilePicture
          }" alt="avatar" class="avatar d-block rounded-3 me-4 flex-nowrap" />
             </a>
             <h3 class="me-4 my-0 w-100">${registrant.firstName} ${
            registrant.lastName
          }, ${registrant.age}</h3>

             <div class="flex-shrink-0 d-flex align-items-center justify-content-center">
               <button class="runded-circle d-block delete bg-warning me-4" id="delete-${
                 registrant.id
               }" onclick="deleteRegistrant(${registrant.id})"></button>
               <button onclick="check('${registrant.id}', '${
            registrant.checkIn ? true : false
          }')" id="${registrant.id}" class="${
            registrant.checkIn
              ? "checked_in bg-success rounded-circle d-block flex-nowrap"
              : "checked_out bg-danger rounded-circle nd-block flex-nowrap"
          }"></button>

             </div>
           </div>
          `;
          wrapper.innerHTML = card;
          registrantsTable.appendChild(wrapper);
        }
      } catch (error) {
        console.log(error);
      } finally {
        loading__34dsf.style.display = "none";
      }
    }

    const check = async (id, status) => {
      const registrantId = document.getElementById(id);
      registrantId.classList.remove("checked_out", "bgq-danger");
      registrantId.classList.remove("checked_in", "bg-success");
      registrantId.classList.add("d-none");

      if (!id) return;

      const path =
        `/kids/${
          status == "false" || status == false ? "check-in" : "check-out"
        }/` + id;

      try {
        const req = await fetch(
          path,

          {
            method: "PUT",
          }
        );
        const res = await req.json();

        if (res.status === 200 && (status == "false" || status == false)) {
          registrantId.classList.add("checked_in", "bg-success");
          registrantId.setAttribute("onclick", `check("${id}", "true")`);
          registrantId.classList.remove("d-none");
          registrantId.classList.add("d-block");
        } else if (res.status === 200 && (status == "true" || status == true)) {
          registrantId.classList.add("checked_out", "bg-danger");
          registrantId.setAttribute("onclick", `check("${id}", "false")`);
          registrantId.classList.remove("d-none");
          registrantId.classList.add("d-block");
        }
      } catch (error) {
        console.error(error);
      }
    };

    function handleSearch() {
      let search = document.getElementById("search");
      search = search.value || "";
      getregistrants("", `ln=${search}`);
    }

    function handleReset() {
      document.getElementById("search").value = "";
      getregistrants();
    }

    const deleteRegistrant = async (id) => {
      if (!id) return;
      const registrantCard = document.getElementsByClassName(`card-${id}`)[0];
      const registrantId = document.getElementById(`delete-${id}`);
      registrantId.classList.add("d-none");

      console.log(registrantCard);

      const path = `/admin/kid/delete/${id}`;

      const callDelete = async () => {
        try {
          const req = await fetch(path, {
            method: "DELETE",
          });
          const res = await req.json();

          if (res.status === 200) {
            registrantCard.remove();
          }
        } catch (error) {
          console.error(error);
        }
      };

      if (window.confirm("Are you sure you want to delete this registrant?")) {
        callDelete();
      } else {
        registrantId.classList.remove("d-none");
        registrantId.classList.add("d-block");
      }
    };

    function handleLoadMore() {
      let count = document.querySelector(".load-more");
      let search = document.getElementById("search");
      search = search?.value ? `ln=${search.value}` : "";
      count = count ? count.dataset.results : "0";

      getregistrants(`fromid=${count}`, search, true);
    }
  </script>
</html>
